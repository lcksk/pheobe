<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.halkamalka.never.eve.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.halkamalka.never.eve.Perspective"
            id="com.halkamalka.never.eve.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.halkamalka.never.eve.application"
            name="com.halkamalka.never.eve.product">
         <property
               name="appName"
               value="com.halkamalka.never.eve.product">
         </property>
      </product>
   </extension>

</plugin>
